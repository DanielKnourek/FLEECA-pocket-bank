{
  "ts-node": {
    "require": [ "tsconfig-paths/register" ],
    "files": true,
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/server/*": [
        "src/server/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": [
    "node_modules"
  ],
  
}